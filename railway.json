{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m venv /opt/venv && . /opt/venv/bin/activate && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "honcho start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  },
  "name": "web-dashboard",
  "nixpacks": {
    "python": {
      "version": "3.11.0"
    }
  }
} 